<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    
    xmlns:view="clr-namespace:MsgBox.View"
    >

  <!-- These icons can be displayed in a message box. They are setup to work for dark Metro styled GUI.
       Just include this file in your application's ResourceDictionary and the ImageEnumToImageConverter
       shall pick it up from there.
   -->
  <BitmapImage x:Key="MsgBoxImage_Information"         UriSource="/MsgBox;component/Images/Metro/Dark/appbar.cancel.png" />
  <BitmapImage x:Key="MsgBoxImage_Question"            UriSource="/MsgBox;component/Images/Metro/Dark/appbar.question.png" />
  <BitmapImage x:Key="MsgBoxImage_Error"               UriSource="/MsgBox;component/Images/Metro/Dark/appbar.sign.stop.png" />
  <BitmapImage x:Key="MsgBoxImage_OK"                  UriSource="/MsgBox;component/Images/Metro/Dark/appbar.check.png" />
  <BitmapImage x:Key="MsgBoxImage_Alert"               UriSource="/MsgBox;component/Images/Metro/Dark/appbar.warning.png" />
  <BitmapImage x:Key="MsgBoxImage_Default"             UriSource="/MsgBox;component/Images/Metro/Dark/appbar.lightbulb.hue.on.png" />
  <BitmapImage x:Key="MsgBoxImage_Warning"             UriSource="/MsgBox;component/Images/Metro/Dark/appbar.information.png" />

  <BitmapImage x:Key="MsgBoxImage_Default_OffLight"    UriSource="/MsgBox;component/Images/Metro/Dark/appbar.lightbulb.hue.png" />
  <BitmapImage x:Key="MsgBoxImage_Default_RedLight"    UriSource="/MsgBox;component/Images/Metro/Dark/appbar.lightbulb.png" />
  <BitmapImage x:Key="MsgBoxImage_Information_Orange"  UriSource="/MsgBox;component/Images/Metro/Dark/appbar.lightning.png" />
  <BitmapImage x:Key="MsgBoxImage_Information_Red"     UriSource="/MsgBox;component/Images/Metro/Dark/appbar.warning.png" />
  <BitmapImage x:Key="MsgBoxImage_Process_Stop"        UriSource="/MsgBox;component/Images/Metro/Dark/appbar.stop.png" />

  <!-- Notification icon for message box usage notification -->
  <BitmapImage x:Key="MsgBox_Usage_Notification" UriSource="/MsgBox;component/Images/Metro/Dark/appbar.information.png" />

</ResourceDictionary>
